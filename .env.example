# Domain Configuration
DOMAIN_NAME=example.com

# Caddy Basic Auth (for accessing evidence/reports securely if configured)
# Generate hash with: caddy hash-password --plaintext 'your_password'
CADDY_EVIDENCE_USER=admin
CADDY_EVIDENCE_PASSWORD_HASH=some_long_hash_string

# Postgres Configuration
POSTGRES_USER=n8n
POSTGRES_PASSWORD=secure_password
POSTGRES_DB=n8n

# n8n Database Configuration (Must match Postgres Config)
DB_TYPE=postgresdb
DB_POSTGRESDB_DATABASE=n8n
DB_POSTGRESDB_HOST=postgres
DB_POSTGRESDB_PORT=5432
DB_POSTGRESDB_USER=n8n
DB_POSTGRESDB_PASSWORD=secure_password

# n8n General Configuration
# The public URL where n8n is accessible
WEBHOOK_URL=https://n8n.example.com
TIMEZONE=Europe/Berlin
N8N_BASIC_AUTH_USER=admin
N8N_BASIC_AUTH_PASSWORD=secure_n8n_password

# User ID / Group ID for file permissions (run 'id -u' and 'id -g' to find yours)
UID=1000
GID=1000

# Visual Tester Workflow Configuration
# The website you want to test (must have a /sitemap.xml)
TARGET_WEBSITE_URL=https://target-website.com

# Secret token to secure the "Update Baseline" webhook
UPDATE_BASELINE_TOKEN=random_secure_string_123

# Gemini API Key for AI Vision checks
AI_API_KEY=your_gemini_api_key

# Slack Webhook URL for notifications
SLACK_WEBHOOK=https://hooks.slack.com/services/T00000000/B00000000/XXXXXXXXXXXXXXXXXXXXXXXX

# Optional: Caddy Evidence Plaintext Password (if passed to n8n for some reason)
CADDY_EVIDENCE_PASSWORD=your_password